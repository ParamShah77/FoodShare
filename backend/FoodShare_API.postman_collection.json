              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"donor@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Donor\",\n  \"role\": \"donor\",\n  \"phone\": \"+1234567890\",\n  \"organization\": \"John's Restaurant\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
